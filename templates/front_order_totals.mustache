{{!
    @template local_shop/front_order_totals

    Classes required for JS:
    * none

}}
<!-- local_shop/front_order_totals -->
<table cellspacing="5" class="generaltable" width="100%">
    <tr valign="top">
        <th colspan="3" class="cell c0">
            {{#str}}totals, local_shop{{/str}}
        </th>
    </tr>

    <tr valign="top">
        <td width="40%" class="cell c0">
            {{#str}}subtotal, local_shop{{/str}}:
        </td>

        <td width="40%" class="cell c1">
            &nbsp;
        </td>

        <td width="20%" align="right" style="text-align:right" class="cell c2 lastcol" data-source="taxedtotal">
            {{{taxedtotal}}}&nbsp;{{{currency}}}
        </td>
    </tr>

    {{#hasdiscounts}}
    {{#discounts}}
    <tr valign="top">
        <td width="40%" class="cell c0">
            &nbsp;
        </td>
        <td width="40%" class="shop-totaltitle ratio cell c1">
            {{#str}}discount, local_shop{{/str}}:
        </td>
        <td width="20%" align="right" class="shop-totals ratio cell c2" data-source="discountrate">
            <b>-{{discountrate}} %</b>
        </td>
    </tr>
    {{/discounts}}

    <tr valign="top">
        <td width="40%" class="cell c0">
            &nbsp;
        </td>

        <td width="40%" class="shop-totaltitle ratio cell c1">
            {{#str}}discountamount, local_shop{{/str}}:
        </td>
        <td width="20%" align="right" class="shop-totals ratio cell c2" data-source="discount">
            {{{discount}}}&nbsp;{{{currency}}}</b>
        </td>
    </tr>
    {{/hasdiscounts}}

    <tr valign="top">
        <td width="40%" class="cell c0 shop-totaltitle topay">
            <b>{{#str}}finaltotalprice, local_shop{{/str}}</b>:
        </td>

        <td width="40%" class="cell c1">
            &nbsp;
        </td>

        <td width="20%" align="right" style="text-align:right" class="cell c2 shop-total topay" data-source="finaltaxedtotal">
            <b>{{{finaltaxedtotal}}}&nbsp;{{{currency}}}</b>
        </td>
    </tr>

    <tr valign="top">
        <td width="40%" class="cell c0">
            {{#str}}untaxedsubtotal, local_shop{{/str}}:
        </td>

        <td width="40%" class="cell c1">
            &nbsp;
        </td>
        <td width="20%" align="right" style="text-align:right" class="cell c2 lastcol" data-source="finaluntaxedtotal">
            {{{finaluntaxedtotal}}}&nbsp;{{{currency}}}
        </td>
    </tr>

    {{#hasshipping}}
    <tr valign="top">
        <td width="40%" class="cell c0">
            &nbsp;
        </td>

        <td width="40%" class="cell c1 shop-totaltitle">
            {{#str}}shipping, local_shop{{/str}}:
        </td>

        <td width="20%" align="right" style="text-align:right" class="cell c2 shop-totals" data-source="shippingtaxedvalue">
            {{{shippingtaxedvalue}}}&nbsp;{{{currency}}}
        </td>
    </tr>

    <tr valign="top">
        <td width="40%" class="cell c0 shop-totaltitle topay">
            <b>{{#str}}finaltotalprice, local_shop{{/str}}</b>:
        </td>

        <td width="40%" class="cell c1">
            &nbsp;
        </td>

        <td width="20%" align="right" style="text-align:right" class="cell c2 shop-total topay" data-source="finalshippedtaxedtotal">
            <b>{{{finalshippedtaxedtotal}}}&nbsp;{{{currency}}}
        </td>
    </tr>
    {{/hasshipping}}

</table>
<!-- /local_shop/front_order_totals -->