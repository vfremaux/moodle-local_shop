{{!
    @template local_shop/frontinvoiceheading

    Classes required for JS:
    * none

}}
<!-- local_shop/frontinvoiceheading -->
<table width="100%">
    {{#withlogo}}
    <tr>
        <td><img src="{{{logourl}}}"></td>
        <td align="right"></td>
    </tr>
    {{/withlogo}}

    <tr valign="top">
        <td colspan="2" align="center">
            {{{headingstr}}}
            {{#subheading}}
            <div>{{{subheaderstr}}}</div>
        {{/subheading}}
        </td>
    </tr>

    <tr valign="top">
        <td width="70%" id="invoice-seller-address">
            <b>{{sellername}}</b><br />
            <b>{{selleraddress}}</b><br />
            <b>{{sellerzip}} {{sellercity}}</b><br />
            {{sellercountry}}<br/><br/>

            <b>{{#str}}num, local_shop{{/str}}: </b> B-{{emissiondatestamp}}-{{billid}}<br/>
            <b>{{#str}}transactioncode, local_shop{{/str}}:</b> <code style="background-color : #E0E0E0">{{transactionid}}</code><br />
            <span class="smaltext">{{providetransactioncode}}</span><br/>
            <b>{{#str}}on, local_shop{{/str}}</b> {{emissiondatestr}}<br />

        </td>

        <td width="30%" align="right" id="invoice-customer-data" class="order-preview-seller-address">
            <div class="customer-data" style="text-align:left">
                <h3>{{#str}}customer, local_shop{{/str}}</h3>
                {{#organisation}}
                    {{{organisation}}}<br/>
                {{/organisation}}

                {{invoicename}}<br/>
                {{invoicezip}} {{custcity}}<br/>
                {{invoicecountry}}<br/>
            </div>
        </td>
    </tr>

    <tr valign="top">
        <td colspan="2" class="sectionHeader" id="invoice-order-box">
            <h2>{{#str}}order, local_shop{{/str}}</h2>
        </td>
    </tr>

</table>
<!-- /local_shop/frontinvoiceheading -->
