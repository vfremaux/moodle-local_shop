{{!
    @template local_shop/front_order_header

    Classes required for JS:
    * none

}}
<!-- local_shop/bills_bill_totals -->
<table cellspacing="5" class="generaltable" width="100%">

    <tr valign="top">
        <th colspan="3" class="cell c0">
            {{#str}}totals, local_shop{{/str}}
        </th>
    </tr>

    {{#hassubtotal}}
    <tr valign="top">';
        <td width="40%" class="cell c0">
            {{#str}}subtotal, local_shop{{/str}}
        </td>

        <td width="40%" class="cell c1">
            &nbsp;
        </td>

        <td width="20%" id="final-taxed-subtotal" class="cell c2 lastcol right-align">
            {{{finaltaxedtotal}}}&nbsp{{{currency}}}
        </td>
    </tr>
    {{/hassubtotal}}

    <tr valign="top">
        <td width="40%" class="cell c0">
            {{#str}}untaxedsubtotal, local_shop{{/str}}
        </td>

        <td width="40%" class="cell c1">
            &nbsp;
        </td>

        <td width="20%" id="final-untaxed-total" class="cell c2 lastcol right-align">
            {{{finaluntaxedtotal}}}&nbsp;{{{currency}}}
        </td>
    </tr>

    <tr valign="top">
        <td width="40%" class="cell c0 shop-taxes">
            {{#str}}taxes, local_shop{{/str}}
        </td>

        <td width="40%" class="cell c1">
            &nbsp;
        </td>

        <td width="20%" id="final-taxes-total" class="cell c2 lastcol shop-taxes right-align">
            {{{finaltaxestotal}}}&nbsp;{{{currency}}}
        </td>
    </tr>

    <tr valign="top">
        <td width="40%" class="cell c0 shop-totaltitle topay">
            {{{finaltotalpricestr}}}
        </td>

        <td width="40%" class="cell c1">
            &nbsp;
        </td>

        <td width="20%" id="final-total-price" class="cell c2 shop-total topay right-align">
            {{{finaltaxedtotal}}}&nbsp;{{{currency}}}
        </td>
    </tr>

    {{#hasshipping}}
    <tr valign="top">
        <td width="40%" class="cell c0">
            &nbsp;
        </td>

        <td width="40%" class="cell c1 shop-totaltitle">
            {{#str}}shipping, local_shop{{/str}} :
        </td>

        <td width="20%" id="shipping-taxed-value" class="cell c2 shop-totals right-align">
            {{{shippingtaxedvalue}}}&nbsp;{{{currency}}}
        </td>
    </tr>

    <tr valign="top">
        <td width="40%" class="cell c0 shop-totaltitle topay">
            {{{finaltotalpricestr}}}
        </td>

        <td width="40%" class="cell c1">
            &nbsp;
        </td>

        <td width="20%" id="final-shipped-taxed-total" class="cell c2 shop-total topay right-align">
            <b>{{{finalshippedtaxedtotal}}}&nbsp;{{{currency}}}</b>
        </td>
    </tr>
    {{/hasshipping}}

</table>
<!-- /local_shop/bills_bill_totals -->
