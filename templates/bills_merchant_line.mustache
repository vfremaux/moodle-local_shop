



<!-- local_shop/bills_merchant_line -->

    {{#head}}
    <tr>
        <th class="header c1">
            {{#str}}num, local_shop{{/str}}
        </th>

        <th class="header c2">
            {{#str}}customer, local_shop{{/str}}
        </th>

        <th class="header c3">
            {{#str}}transaction, local_shop{{/str}}
        </th>

        <th class="header c3">
            {{#str}}date, local_shop{{/str}}
        </th>

        <th class="header c3">
            {{#str}}lettering, local_shop{{/str}}
        </th>

        {{#haspartners}}
        <th class="header c3">
            {{#str}}partner, local_shop{{/str}}
        </th>
        {{/haspartners}}

        {{#hasdiscounts}}
        <th class="header c3">
            {{#str}}discount, local_shop{{/str}}
        </th>
        {{/hasdiscounts}}

        <th class="header lastcol" align="right" style="text-align: right">
            {{#str}}amount, local_shop{{/str}}
        </th>

    </tr>

    {{/head}}

    {{^head}}
    <tr valign="top">

        <td width="120" class="cell c1">
            <a class="activeLink" href="{{{billurl}}}">B-{{emissiondate}}-{{id}}</a>
        </td>

        <td width="*" class="cell c2">
            <a class="activeLink" href="{{{customerurl}}}">{{firstname}} {{lastname}}</a>
            {{#email}}
            (<a href="mailto:{{{email}}}">{{{email}}}</a>)
            {{/email}}
        </td>

        <td width="120" class="cell c3">
            <code><a href="{{{scanurl}}}" title="{{#str}}scantrace, local_shop{{/str}}">{{transactionid}}</a></code><br>
            {{#onlinetransactionid}}
            <code>(@:{{onlinetransactionid}})</code>
            {{/onlinetransactionid}}
        </td>

        <td width="120" class="cell c2">
            {{emissiondatestr}}
        </td>

        <td width="120" class="cell c2">
            {{idnumber}}
        </td>

        {{#haspartners}}
        <td width="120" class="cell c2">
            {{#partnerkey}}
            <div title="{{partnername}}">{{partnerkey}}</div>
            {{/partnerkey}}
        </td>
        {{/haspartners}}

        {{#hasdiscounts}}
        <td width="120" class="cell c2">
            {{#data1}}
            <div class="amount-primary" data-source="{{source1}}">{{{data1}}} {{{currency}}}</div>
            {{#hasdata2}}
            <div class="amount-secondary" data-source="{{source2}}">{{data2}} {{{currency}}}</div>
            {{/hasdata2}}
            <code data-source="discountcodes">{{discountcodes}}</code>
            {{/data1}}
            {{^data1}}
            {{#billhasdiscounts}}
            0.00
            {{/billhasdiscounts}}
            {{^billhasdiscounts}}
            --
            {{/billhasdiscounts}}
            {{/data1}}
        </td>
        {{/hasdiscounts}}

        <td width="100" align="right" class="cell lastcol">
            <div class="amount-primary" data-source="{{amountsource1}}">{{{amount1}}} {{{currency}}}</div>
            {{#amount2}}
            <div class="amount-secondary" data-source="{{amountsource2}}">{{amount2}} {{{currency}}}</div>
            {{/amount2}}
        </td>
    </tr>

    {{/head}}
<!-- /local_shop/bills_merchant_line -->