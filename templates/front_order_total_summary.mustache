{{!
    @template local_shop/front_order_total_summary

    Classes required for JS:
    * none

}}
<!-- local_shop/front_order_total_summary -->
<table width="100%">

    <tr valign="top">
        <td align="left" class="shop-ordercell">
            <b>{{#str}}ordertotal, local_shop{{/str}}</b> :
        </td>
        <td align="left" class="shop-ordercell">
            {{{amount}}}&nbsp;{{{currency}}}
            {{#str}}for, local_shop{{/str}}
            <span id="object_count_span"> {{totalobjects}}&nbsp;</span>
            {{#str}}objects, local_shop{{/str}}
        </td>
    </tr>

    {{#hasdiscounts}}
    <tr>
        <td colspan="2" class="shop-ordercell">
            <b>{{#str}}applieddiscounts, local_shop{{/str}}</b>
        </td>
    </tr>
    <tr>
        <td colspan="2">
            {{#discounts}}
            {{{reason}}} : <span class="discount-rate">{{discountrate}} %</span><br/>
            {{/discounts}}
        </td>
    </tr>

    <tr valign="bottom">
        <td class="shop-finalcount">
            <b>{{#str}}orderingtotal, local_shop{{/str}}</b>
        </td>
        <td align="left" id="shop-discounted-span" class="shop-finalcount">
            <span class="discount-overriden-amount">{{{amount}}}&nbsp;{{{currency}}}</span>
            <span class="discounted-amount">{{{discounted}}}&nbsp;{{{currency}}}
        </td>

    </tr>
    {{/hasdiscounts}}

    {{#useshipping}}
    <tr>
        <td align="left" colspan="2">
            <span class="smalltext">(*){{#str}}shippingadded, local_shop{{/str}}</span><br/>
            <input type="checkbox" name="shipping" value="1" shipchecked /> {{#str}}askforshipping, local_shop{{/str}}
        </td>
    </tr>
    {{/useshipping}}

</table>
<!-- /local_shop/front_order_total_summary -->
