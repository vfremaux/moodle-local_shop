{{!
    @template local_shop/front_taxes

    Classes required for JS:
    * none

}}
<!-- local_shop/front_taxes -->
<table cellspacing="5" class="generaltable" width="100%">

    <tr class="shop-tax" valign="top">
        <th align="left" class="cell c0">
            {{#str}}taxname, local_shop{{/str}}
        </th>
        <th align="left" class="cell c1">
            {{#str}}taxratio, local_shop{{/str}}
        </th>
        <th align="right" style="text-align:right" class="cell c2 lastcoll" style="text-align:right">
            {{#str}}taxamount, local_shop{{/str}}
        </th>
    </tr>

    {{#taxlines}}
    <tr class="shop-tax" valign="top">
        <td align="left" class="cell c0">
            {{taxtitle}}
        </td>
        <td align="left" class="cell c1">
            {{taxratio}}
        </td>
        <td align="right" style="text-align:right" class="cell c2 lastcoll">
            {{{taxamount}}}
        </td>
    </tr>
    {{/taxlines}}

    <tr valign="top">
        <td width="40%" class="cell c0 shop-taxes">
            <b>{{#str}}totaltaxes, local_shop{{/str}}</b>
        </td>
        <td width="40%" class="cell c1">
            &nbsp;
        </td>
        <td width="20%" align="right" style="text-align:right" class="cell c2 lastcol shop-taxes">
            {{{totaltaxes}}}
        </td>
    </tr>
</table>
<!-- /local_shop/front_taxes -->
